= search_form_for(@search, url: products_search_path) do |f|
  .form-group
    = f.label :name_cont, "キーワードを追加する"
    = f.search_field(:name_cont, {class: "input-default"})
  .form-group
    = f.label :category_id_eq, "カテゴリーを選択する"
    = f.collection_select(:category_root_id_eq, @parents, :id , :name, {prompt: "---"}, {class: "input-default"})
  .form-group
    = f.label :brand_id_eq, "ブランドを選択する"
    %br
    = f.collection_select(:brand_id_eq, Brand.all, :id , :name, {prompt: "---"}, {class: "input-default"})
  .form-group
    = f.label :size_eq, "サイズを指定する"
    %br
    = f.select(:size_eq, [["S"], ["M"],["L"]], {prompt: "---"}, {class: "input-default"})
  .form-group
    = f.label :price_eq, "価格"
    %br
    = f.search_field(:price_gteq, {class: "input-default"})
    = f.label :price_eq, "~"
    = f.search_field(:price_lteq, {class: "input-default"})
  .form-group
    = f.label :state_id_eq, "商品の状態"
    %br
    = f.collection_select(:state_id_eq, State.all, :id, :name, {prompt: "---"}, {class: "input-default", required: false})
  .form-group
    = f.label :state_id_eq, "配送料の負担"
    %br
    = f.collection_select(:shopping_fee_id, ShoppingFee.all, :id, :name, {prompt: "---"}, {class: "input-default"})
  .form-group
    = f.label :state_id_eq, "販売状況"
    %br
    = f.collection_select(:shopping_fee_id, ShoppingFee.all, :id, :name, {prompt: "---"}, {class: "input-default"})
  = f.submit "検索", class: "search-btn"