%li.itemList
  = link_to product_path(product) do
    - if product.product_soldout?(product)
      .soldout--small
      .soldoutText--small 売切
    %figure.iconPic
      = image_tag "#{product.images.first.src}"
    .contents
      .content__body #{product.name}
      .content__price ¥ #{product.price}
    = fa_icon "angle-right", {class: "angleRight"}
