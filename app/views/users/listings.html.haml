= render "shared/header"
%nav.breadCrumbs
  %ul
    %li
      =render 'shared/breadcrumbs'
.main
  .contents
    = render "leftcontent"
    .rightContent
      %h2.listingsHeader 出品した商品
      %ul.listingsTab
        %li.tabItem.active
          = link_to "出品中", "#"
        %li.tabItem
          = link_to "取引中", in_progress_user_path(current_user)
        %li.tabItem
          = link_to "売却済", completed_user_path(current_user)
      - if @products.empty?
        %ul.itemNotFound
          %li.itemNotFound__text 出品中の商品がありません
      - else
        %ul.itemLists
          = render partial: "users/product", collection: @products
= render "shared/banner"
= render "shared/footer"
= render "shared/purchaseBtn"
